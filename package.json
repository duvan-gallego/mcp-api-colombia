{
  "name": "mcp-api-colombia",
  "version": "1.0.0",
  "description": "MCP Server for interacting with API-Colombia",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "redis-cloud-api-mcp-tool": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm prepare && tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/",
    "test": "vitest",
    "prepare": "rm -rf src/client && rm -rf dist && pnpm generate:api",    
    "generate:api": "openapi-ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol"
  ],
  "author": "Duvan Gallego",
  "license": "MIT",
  "dependencies": {
    "@hey-api/client-fetch": "^0.13.1",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@hey-api/openapi-ts": "^0.78.1",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.2",
    "vitest": "^3.2.4"
  }
}
